[core]
  editor = nvim

[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  negative = true # use n and N to move between diff sections
  side-by-side = true

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
